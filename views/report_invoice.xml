<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom Indian GST Tax Invoice Report Template (For Vendor Bills) -->
    <template id="report_tax_invoice_document_indian" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='page']" position="replace">
            <div class="page">
                <!-- Header -->
                <div class="row">
                    <div class="col-8">
                        <h3><strong>Tax Invoice</strong></h3>
                    </div>
                    <div class="col-4 text-right">
                        <strong>e-Invoice</strong>
                        <div t-if="o.l10n_in_edi_signed_qr_code_image">
                            <img t-att-src="'data:image/png;base64,' + o.l10n_in_edi_signed_qr_code_image" 
                                 style="width:150px;height:150px;border:1px solid #ccc;"/>
                        </div>
                    </div>
                </div>

                <hr style="border-top: 2px solid #000;"/>

                <!-- IRN and Acknowledgment Details -->
                <div class="row mt-2" style="font-size: 11px;">
                    <div class="col-12">
                        <table class="table-borderless" style="width:100%;">
                            <tr>
                                <td width="12%"><strong>IRN</strong></td>
                                <td width="3%">:</td>
                                <td><span t-field="o.l10n_in_edi_irn"/></td>
                            </tr>
                            <tr>
                                <td><strong>Ack No.</strong></td>
                                <td>:</td>
                                <td><span t-field="o.l10n_in_edi_ack_no"/></td>
                            </tr>
                            <tr>
                                <td><strong>Ack Date</strong></td>
                                <td>:</td>
                                <td><span t-field="o.l10n_in_edi_ack_date"/></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Supplier and Invoice Information -->
                <div class="row mt-3">
                    <!-- Supplier/Vendor Info (Left Side) -->
                    <div class="col-6" style="padding-right: 5px;">
                        <div style="border: 2px solid #000; padding: 10px; min-height: 200px;">
                            <!-- Company Logo -->
                            <div t-if="o.partner_id.image_1920" style="margin-bottom: 10px;">
                                <img t-att-src="image_data_uri(o.partner_id.image_1920)" 
                                     style="max-height: 50px; max-width: 120px;"/>
                            </div>
                            
                            <strong style="font-size: 13px;"><span t-field="o.partner_id.name"/></strong><br/>
                            <div style="font-size: 10px;">
                                <span t-field="o.partner_id.street"/><br/>
                                <span t-if="o.partner_id.street2" t-field="o.partner_id.street2"/><br/>
                                <span t-field="o.partner_id.city"/>, 
                                <span t-field="o.partner_id.state_id.name"/><br/>
                                <span t-field="o.partner_id.zip"/><br/>
                                <strong>GSTIN/UIN:</strong> <span t-field="o.partner_id.vat"/><br/>
                                <strong>State Name:</strong> <span t-field="o.partner_id.state_id.name"/>, 
                                Code : <span t-field="o.partner_id.state_id.l10n_in_tin"/>
                            </div>
                        </div>
                    </div>

                    <!-- Invoice Details (Right Side) -->
                    <div class="col-6" style="padding-left: 5px;">
                        <table class="table table-sm table-bordered" style="font-size: 10px; margin-bottom: 0;">
                            <tr>
                                <td width="50%" style="padding: 5px;"><strong>Invoice No.</strong></td>
                                <td style="padding: 5px;"><span t-field="o.ref"/></td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;"><strong>Dated</strong></td>
                                <td style="padding: 5px;">
                                    <span t-field="o.invoice_date" t-options='{"format": "dd-MMM-yy"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;"><strong>Delivery Note</strong></td>
                                <td style="padding: 5px;"><span t-field="o.invoice_origin"/></td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;"><strong>Mode/Terms of Payment</strong></td>
                                <td style="padding: 5px;">
                                    <span t-field="o.invoice_payment_term_id.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;"><strong>Reference No. &amp; Date</strong></td>
                                <td style="padding: 5px;"><span t-field="o.ref"/></td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;"><strong>Other References</strong></td>
                                <td style="padding: 5px;"><span t-field="o.narration"/></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Consignee and Buyer Information -->
                <div class="row mt-2">
                    <!-- Consignee (Ship to) - Left Side -->
                    <div class="col-6" style="padding-right: 5px;">
                        <div style="border: 2px solid #000; padding: 10px; min-height: 180px; font-size: 10px;">
                            <strong>Consignee (Ship to)</strong><br/>
                            <span t-field="o.company_id.name"/><br/>
                            <span t-field="o.company_id.street"/><br/>
                            <span t-if="o.company_id.street2" t-field="o.company_id.street2"/><br/>
                            <span t-field="o.company_id.city"/>, 
                            <span t-field="o.company_id.state_id.name"/><br/>
                            <strong>GSTIN/UIN:</strong> <span t-field="o.company_id.vat"/><br/>
                            <strong>State Name:</strong> <span t-field="o.company_id.state_id.name"/>, 
                            Code : <span t-field="o.company_id.state_id.l10n_in_tin"/>
                        </div>
                    </div>

                    <!-- Dispatch/Delivery Details - Right Side -->
                    <div class="col-6" style="padding-left: 5px;">
                        <table class="table table-sm table-bordered" style="font-size: 10px; margin-bottom: 0;">
                            <tr>
                                <td width="50%" style="padding: 5px;"><strong>Buyer's Order No.</strong></td>
                                <td style="padding: 5px;"><span t-field="o.invoice_origin"/></td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;"><strong>Dated</strong></td>
                                <td style="padding: 5px;">
                                    <span t-field="o.invoice_date" t-options='{"format": "dd-MMM-yy"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;"><strong>Dispatch Doc No.</strong></td>
                                <td style="padding: 5px;"><span t-field="o.name"/></td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;"><strong>Delivery Note Date</strong></td>
                                <td style="padding: 5px;"></td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;"><strong>Dispatched through</strong></td>
                                <td style="padding: 5px;">By Road</td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;"><strong>Destination</strong></td>
                                <td style="padding: 5px;">
                                    <span t-field="o.company_id.city"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Buyer (Bill to) -->
                <div class="row mt-2">
                    <div class="col-6" style="padding-right: 5px;">
                        <div style="border: 2px solid #000; padding: 10px; min-height: 120px; font-size: 10px;">
                            <strong>Buyer (Bill to)</strong><br/>
                            <span t-field="o.company_id.name"/><br/>
                            <span t-field="o.company_id.street"/><br/>
                            <span t-if="o.company_id.street2" t-field="o.company_id.street2"/><br/>
                            <span t-field="o.company_id.city"/>, 
                            <span t-field="o.company_id.state_id.name"/><br/>
                            <strong>GSTIN/UIN:</strong> <span t-field="o.company_id.vat"/><br/>
                            <strong>State Name:</strong> <span t-field="o.company_id.state_id.name"/>, 
                            Code : <span t-field="o.company_id.state_id.l10n_in_tin"/>
                        </div>
                    </div>
                    <div class="col-6" style="padding-left: 5px;">
                        <table class="table table-sm table-bordered" style="font-size: 10px; margin-bottom: 0;">
                            <tr>
                                <td width="50%" style="padding: 5px;"><strong>Bill of Lading/LR-RR No.</strong></td>
                                <td style="padding: 5px;"></td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;"><strong>Motor Vehicle No.</strong></td>
                                <td style="padding: 5px;"></td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;"><strong>Terms of Delivery</strong></td>
                                <td style="padding: 5px;"></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Invoice Lines Table -->
                <table class="table table-sm table-bordered mt-3" style="font-size: 10px;">
                    <thead style="background-color: #f0f0f0;">
                        <tr>
                            <th style="width: 4%; padding: 5px; text-align: center;">Sl<br/>No.</th>
                            <th style="width: 30%; padding: 5px;">Description of Goods</th>
                            <th style="width: 10%; padding: 5px; text-align: center;">HSN/SAC</th>
                            <th style="width: 10%; padding: 5px; text-align: center;">Quantity</th>
                            <th style="width: 10%; padding: 5px; text-align: right;">Rate</th>
                            <th style="width: 6%; padding: 5px; text-align: center;">per</th>
                            <th style="width: 8%; padding: 5px; text-align: center;">Disc. %</th>
                            <th style="width: 12%; padding: 5px; text-align: right;">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="line_index" t-value="0"/>
                        <t t-foreach="o.invoice_line_ids.filtered(lambda l: l.display_type == 'product')" t-as="line">
                            <t t-set="line_index" t-value="line_index + 1"/>
                            <tr>
                                <td style="padding: 5px; text-align: center;">
                                    <span t-esc="line_index"/>
                                </td>
                                <td style="padding: 5px;">
                                    <strong><span t-field="line.product_id.name"/></strong>
                                    <span t-if="line.name != line.product_id.name">
                                        <br/><span t-field="line.name"/>
                                    </span>
                                </td>
                                <td style="padding: 5px; text-align: center;">
                                    <span t-field="line.product_id.l10n_in_hsn_code"/>
                                </td>
                                <td style="padding: 5px; text-align: center;">
                                    <span t-field="line.quantity"/>
                                    <span t-field="line.product_uom_id.name"/>
                                </td>
                                <td style="padding: 5px; text-align: right;">
                                    <span t-field="line.price_unit" 
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                                <td style="padding: 5px; text-align: center;">
                                    <span t-field="line.product_uom_id.name"/>
                                </td>
                                <td style="padding: 5px; text-align: center;">
                                    <span t-field="line.discount"/>
                                </td>
                                <td style="padding: 5px; text-align: right;">
                                    <span t-field="line.price_subtotal" 
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </t>

                        <!-- Tax Line with proper display -->
                        <tr style="border-top: 2px solid #000;">
                            <td colspan="7" style="padding: 5px; text-align: right;">
                                <strong>Output IGST @ 18%</strong>
                            </td>
                            <td style="padding: 5px; text-align: right;">
                                <strong>
                                    <span t-esc="'18 %'" style="margin-right: 20px;"/>
                                    <span t-field="o.amount_tax" 
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </strong>
                            </td>
                        </tr>

                        <!-- Total Row -->
                        <tr style="background-color: #f0f0f0; font-weight: bold;">
                            <td colspan="3" style="padding: 5px;"><strong>Total</strong></td>
                            <td style="padding: 5px; text-align: center;">
                                <strong>
                                    <span t-esc="sum(o.invoice_line_ids.filtered(lambda l: l.display_type == 'product').mapped('quantity'))"/>
                                    <span> BDL</span>
                                </strong>
                            </td>
                            <td colspan="3"></td>
                            <td style="padding: 5px; text-align: right;">
                                <strong>â‚¹ <span t-field="o.amount_total" 
                                          t-options='{"widget": "float", "precision": 2}'/></strong>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <!-- Amount in Words -->
                <div class="row mt-2">
                    <div class="col-12" style="font-size: 10px; padding: 5px; border: 1px solid #ccc;">
                        <strong>Amount Chargeable (in words)</strong><br/>
                        <em><span t-field="o.amount_total_words"/></em>
                    </div>
                </div>

                <!-- HSN Summary Table -->
                <div class="row mt-3">
                    <div class="col-12">
                        <table class="table table-sm table-bordered" style="font-size: 10px;">
                            <thead style="background-color: #f0f0f0;">
                                <tr>
                                    <th style="padding: 5px;">HSN/SAC</th>
                                    <th style="padding: 5px; text-align: right;">Taxable Value</th>
                                    <th style="padding: 5px; text-align: center;">Rate %</th>
                                    <th style="padding: 5px; text-align: right;">IGST Amount</th>
                                    <th style="padding: 5px; text-align: right;">CGST Amount</th>
                                    <th style="padding: 5px; text-align: right;">SGST Amount</th>
                                    <th style="padding: 5px; text-align: right;">Total Tax Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="hsn_groups" t-value="{}"/>
                                <t t-foreach="o.invoice_line_ids.filtered(lambda l: l.display_type == 'product')" t-as="line">
                                    <t t-set="hsn_code" t-value="line.product_id.l10n_in_hsn_code or 'N/A'"/>
                                    <t t-set="tax_rate" t-value="sum(line.tax_ids.mapped('amount'))"/>
                                    <t t-set="key" t-value="(hsn_code, tax_rate)"/>
                                    <t t-if="key not in hsn_groups" t-set="hsn_groups" t-value="dict(hsn_groups, **{key: {'subtotal': 0, 'tax': 0}})"/>
                                    <t t-set="hsn_groups[key]['subtotal']" t-value="hsn_groups[key]['subtotal'] + line.price_subtotal"/>
                                    <t t-set="hsn_groups[key]['tax']" t-value="hsn_groups[key]['tax'] + (line.price_total - line.price_subtotal)"/>
                                </t>
                                
                                <t t-foreach="hsn_groups.items()" t-as="hsn_item">
                                    <tr>
                                        <td style="padding: 5px;"><span t-esc="hsn_item[0][0]"/></td>
                                        <td style="padding: 5px; text-align: right;">
                                            <span t-esc="'%.2f' % hsn_item[1]['subtotal']"/>
                                        </td>
                                        <td style="padding: 5px; text-align: center;">
                                            <span t-esc="'%.0f' % hsn_item[0][1]"/>%
                                        </td>
                                        <td style="padding: 5px; text-align: right;">
                                            <span t-esc="'%.2f' % hsn_item[1]['tax']"/>
                                        </td>
                                        <td style="padding: 5px; text-align: right;">-</td>
                                        <td style="padding: 5px; text-align: right;">-</td>
                                        <td style="padding: 5px; text-align: right;">
                                            <span t-esc="'%.2f' % hsn_item[1]['tax']"/>
                                        </td>
                                    </tr>
                                </t>
                                
                                <!-- HSN Total -->
                                <tr style="font-weight: bold; background-color: #f0f0f0;">
                                    <td style="padding: 5px;"><strong>Total</strong></td>
                                    <td style="padding: 5px; text-align: right;">
                                        <strong><span t-field="o.amount_untaxed" 
                                              t-options='{"widget": "float", "precision": 2}'/></strong>
                                    </td>
                                    <td></td>
                                    <td style="padding: 5px; text-align: right;">
                                        <strong><span t-field="o.amount_tax" 
                                              t-options='{"widget": "float", "precision": 2}'/></strong>
                                    </td>
                                    <td style="padding: 5px; text-align: right;"><strong>-</strong></td>
                                    <td style="padding: 5px; text-align: right;"><strong>-</strong></td>
                                    <td style="padding: 5px; text-align: right;">
                                        <strong><span t-field="o.amount_tax" 
                                              t-options='{"widget": "float", "precision": 2}'/></strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Tax Amount in Words -->
                <div class="row mt-2">
                    <div class="col-12" style="font-size: 10px;">
                        <strong>Tax Amount (in words) :</strong>
                        <span t-field="o.amount_tax_words"/>
                    </div>
                </div>

                <!-- Remarks and Declaration -->
                <div class="row mt-3">
                    <div class="col-12" style="font-size: 9px; padding: 5px;">
                        <strong>Remarks:</strong><br/>
                        <span t-field="o.narration"/>
                    </div>
                </div>

                <!-- Footer: Company Details and Signature -->
                <div class="row mt-3" style="font-size: 10px;">
                    <div class="col-7">
                        <strong>Company's VAT TIN</strong> : <span t-field="o.partner_id.vat"/><br/>
                        <strong>Company's CST No.</strong> : <span t-field="o.partner_id.l10n_in_pan"/><br/>
                        <div class="mt-2">
                            <strong>Declaration</strong><br/>
                            We declare that this invoice shows the actual price of the<br/>
                            goods described and that all particulars are true and correct.<br/>
                            And the country of origin of shipped by the manufacturer is India.
                        </div>
                    </div>
                    <div class="col-5 text-right">
                        <strong>for <span t-field="o.partner_id.name"/></strong><br/>
                        <br/><br/><br/>
                        <strong>Authorised Signatory</strong>
                    </div>
                </div>

                <!-- Computer Generated Invoice Footer -->
                <div class="row mt-4">
                    <div class="col-12 text-center" style="font-size: 9px;">
                        <em>This is a Computer Generated Invoice</em>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>