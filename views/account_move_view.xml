<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_custom_fields" model="ir.ui.view">
        <field name="name">account.move.custom.invoice.fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add fields after invoice date -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <!-- <group string="Dispatch Details"> -->
                    <field name="delivery_note"/>
                    <field name="mode_of_payment"/>
                    <field name="ref_no"/>
                    <field name="other_ref"/>

                    <field name="buyer_order_no"/>
                    <field name="dispatch_doc_no"/>
                    <field name="delivery_note_date"/>
                    <field name="otherdispatch_through_ref"/>
                    <field name="destination"/>
                    <field name="bill_of_landing"/>
                    <field name="vehicle_no"/>
                    <field name="delivery_terms"/>




                <!-- </group> -->
            </xpath>
           

        </field>
    </record>
</odoo>
