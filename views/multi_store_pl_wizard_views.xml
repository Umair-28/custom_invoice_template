<odoo>
    <record id="action_multi_store_pl_wizard" model="ir.actions.act_window">
        <field name="name">Multi-Store P&amp;L Report</field>
        <field name="res_model">multi.store.pl.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_inherit_multi_store_pl_dashboard_button" model="ir.ui.view">
        <field name="name">account.journal.kanban.inherit.wizard.button</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_kanban"/> 
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_multi_store_pl_wizard)d"
                        string="Multi-Store P&amp;L Wizard"
                        type="action"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>